<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.swallowsnest.podcastlistener">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label= "@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NowPlaying"
            android:label="Now Playing"/>

        <activity android:name=".BuyMore"
            android:label="Buy More Podcasts"/>

        <activity android:name=".SearchActivity"
            android:label="Search Podcasts"/>

        <activity android:name=".AvailablePodcasts"
            android:label="Available Podcasts">

        </activity>
    </application>

</manifest>